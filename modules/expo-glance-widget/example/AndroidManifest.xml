<?xml version="1.0" encoding="utf-8"?>
<!-- Example AndroidManifest.xml for complete widget examples -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Widget receiver for the complete example widget -->
    <receiver 
        android:name=".CompleteExampleWidgetReceiver"
        android:exported="true">
        <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
            android:name="android.appwidget.provider"
            android:resource="@xml/complete_example_widget_info" />
    </receiver>

    <!-- Widget receiver for the custom preferences widget -->
    <receiver 
        android:name=".CustomPreferencesWidgetReceiver"
        android:exported="true">
        <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
            android:name="android.appwidget.provider"
            android:resource="@xml/custom_preferences_widget_info" />
    </receiver>

</manifest>
