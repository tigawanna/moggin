{
  "name": "expo-glance-widget",
  "version": "2.0.0",
  "description": "Modern Android widget module for Expo with DataStore integration and automatic file syncing",
  "main": "index.ts",
  "module": "index.ts",
  "types": "index.ts",
  "scripts": {
    "build": "tsc",
    "plugin:build": "tsc -p tsconfig.json",
    "plugin:bundle": "tsup plugins/index.ts --format cjs --out-dir plugins",
    "clean": "rm -rf plugins/*.js",
    "test": "jest",
    "lint": "eslint src/ plugins/ --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "expo",
    "android",
    "widget",
    "glance",
    "compose",
    "datastore",
    "react-native"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/expo-glance-widget.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/expo-glance-widget/issues"
  },
  "homepage": "https://github.com/yourusername/expo-glance-widget#readme",
  "peerDependencies": {
    "expo": ">=53.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsup": "^6.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@expo/config-plugins": "^7.0.0",
    "xml2js": "^0.6.0"
  },
  "files": [
    "android/",
    "plugins/",
    "src/",
    "example/",
    "index.ts",
    "expo-module.config.json",
    "README.md",
    "CHANGELOG.md",
    "API.md",
    "QUICKSTART.md",
    "MIGRATION.md",
    "TROUBLESHOOTING.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "expo": {
    "name": "expo-glance-widget",
    "slug": "expo-glance-widget"
  }
}
